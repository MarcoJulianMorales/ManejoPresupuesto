@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Crear Categoria";
}

<h1>Categorías</h1>
<h5>
    La categoría nos permite indicar en qué gastamos nuestro dinero,
    también, de dónde provienen nuestros ingresos.
</h5>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var categoria in Model)
        {
            <tr>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-primary"><i class="bi-pencil-fill"></i></a>
                    <a asp-action="Borrar" asp-route-id="@categoria.Id" class="btn btn-danger"><i class="bi-trash-fill"></i></a>
                </td>
                <td>
                    @categoria.Nombre
                </td>
                <td>
                    @categoria.TipoOperacionId.ToString()
                </td>
            </tr>
        }

    </tbody>
</table>