@model CuentaCreacionDTO
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Cuenta</h1>
<h5>
    La cuenta se refiere a los distintos balances que tienes:
    tarjeta de crédito, cuenta de ahorro, préstamo, etc.
</h5>

<form asp-action="Crear">
    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label" asp-for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="TipoCuentaId">Tipo de Cuenta</label>
        <select asp-for="TipoCuentaId" asp-items="Model.TiposCuentas" class="form-select"></select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Balance">Balance</label>
        <input type="text" asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Descripcion">Descripcion</label>
        <textarea type="text" asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}